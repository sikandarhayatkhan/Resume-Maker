    // form cv template
    // Default form contact
    form.text-center.border.border-light.p-5(action='#!')
      p.h4.mb-4 Untitled
      p.h6.mb-4(style='text-align: left') Profile Completeness 
      .progress.md-progress(style='height: 20px')
        .progress-bar(role='progressbar', style='width: 25%; height: 20px', aria-valuenow='25', aria-valuemin='0', aria-valuemax='100') 25%
      hr.hr-light
      // Name
      input#defaultContactFormName.form-control.mb-4(type='text', placeholder='Name')
      // Personal-info
      input#defaultContactFormPersonal-info.form-control.mb-4(type='text', placeholder='Personal-info')
      // Experience
      input#defaultContactFormExperience.form-control.mb-4(type='text', placeholder='Experience')
      // Education
      input#defaultContactFormEducation .form-control.mb-4(type='text', placeholder='Education ')
      // Skill
      input#defaultContactFormSkill.form-control.mb-4(type='text', placeholder='Skill')
      // Subject
      p.h6.mb-4(style='text-align: left') Template 
      select.browser-default.custom-select.mb-4
        option(value='', disabled='') Choose option
        option(value='1', selected='') Template 1
        option(value='2') Template 2
        option(value='3') Template 3
        option(value='4') Template 4
      p.h6.mb-4(style='text-align: left') Professional Summary 
      // Message
      .form-group
        textarea#exampleFormControlTextarea2.form-control.rounded-0(rows='3', placeholder='Message')
      // Copy
      .custom-control.custom-checkbox.mb-4
        input#defaultContactFormCopy.custom-control-input(type='checkbox')
        label.custom-control-label(for='defaultContactFormCopy') Agree to our terms and conditions?
      // Send button
      button.btn.btn-info.btn-block(type='submit') Send
